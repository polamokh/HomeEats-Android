<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/DeliveryBoyOrdersCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/DeliveryBoyOrdersViewMakerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/DeliveryBoyOrdersViewBuyerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DeliveryBoyOrdersViewMakerName"

                android:text="Phone"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DeliveryBoyOrdersViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DeliveryBoyOrdersViewBuyerName"
                android:text="Email"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/View_Order_Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/DeliveryBoyOrdersViewStatus"
                android:layout_marginStart="150dp"
                app:srcCompat="@drawable/ic_viewdetails" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
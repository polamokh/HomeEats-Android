<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/foodBuyerMakerCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/foodBuyerMakerCardViewImage"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/foodBuyerMakerCardViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMakerCardViewImage"
                android:layout_centerHorizontal="true"
                android:text="Name"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/foodBuyerMakerCardViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMakerCardViewName"
                android:layout_centerHorizontal="true"
                android:text="Phone"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/foodBuyerMakerCardViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMakerCardViewPhone"
                android:layout_centerHorizontal="true"
                android:text="Email"
                android:textSize="18sp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
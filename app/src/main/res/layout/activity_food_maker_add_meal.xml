<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FoodMaker.FoodMakerAddMealActivity">

    <EditText
        android:id="@+id/Name_textbox"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/Desc_textbox"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_below="@id/Name_textbox"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/Price_textbox"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_below="@id/Desc_textbox"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/Category_textbox"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_below="@id/Price_textbox"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Category"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/uploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Category_textbox"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="16dp"
        android:text="Upload Image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="407dp"
        android:layout_height="199dp"
        android:layout_below="@id/Category_textbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="162dp" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@android:drawable/ic_input_add" />
</RelativeLayout>
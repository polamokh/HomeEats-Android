<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/foodBuyerMealCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/foodBuyerMealCardViewImage"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/foodBuyerMealCardViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMealCardViewImage"
                android:layout_alignParentLeft="true"
                android:text="Pizza"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foodBuyerMealCardViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMealCardViewImage"
                android:layout_alignParentRight="true"
                android:text="EGP50"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foodBuyerMealCardViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMealCardViewName"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Some text Some text Some text Some text Some text Some text Some text "
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/foodBuyerMealCardViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMealCardViewDescription"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Some text Some"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foodBuyerMealCardViewMakerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodBuyerMealCardViewCategory"
                android:layout_alignParentRight="true"
                android:text="Maker"
                android:textSize="20sp" />

            <Button
                android:id="@+id/foodBuyerAddOrderItemButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodBuyerMealCardViewMakerName"
                android:layout_marginTop="5sp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Add To Cart"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
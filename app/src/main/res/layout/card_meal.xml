<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mealCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <ImageView
                android:id="@+id/mealCardImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/mealCardTextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/mealCardImageView"
                android:maxLines="1"
                android:text="Pizza"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/mealCardTextViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealCardTextViewName"
                android:layout_toRightOf="@id/mealCardImageView"
                android:maxLines="2"
                android:text="The pizza is a meal so you can eat it"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mealCardTextViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mealCardImageView"
                android:layout_below="@id/mealCardTextViewDescription"
                android:layout_alignParentRight="true"
                android:text="EGP500"
                android:textAlignment="textEnd"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
